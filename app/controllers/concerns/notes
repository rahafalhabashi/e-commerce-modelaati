# // class Order < ActiveRecord::Base
# //     has_many :products
# //     belongs_to :user 
# //     // (has a user_id and a cart_id (because cart has_one order))
# // end

# // class Cart < ActiveRecord::Base
# //     has_many :products
# //     has_one :order 
# //     belongs_to :user
# //     belongs_to :cart_product 
# //     // has a cartProduct_id & user_id
# // end

# // class CartProduct < ActiveRecord::Base (JOIN)
# // end



# // // User —-< order>--- cart –< cart_product >---- product